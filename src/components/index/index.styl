.wrapper
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  overflow auto

  footer
    text-align center
    a
      color #000
  header
    margin-bottom 10px
    .webpackflow-logo
      display inline-block
      width 100px
      height 100px
      margin 10px
      vertical-align middle
      background-repeat no-repeat
      background-position left center
      background-size cover
      background-color #fff
      border-radius 50%
    .title
      margin 0
      padding 10px 0
      text-align center
      background-color #2196f3
      color #fff
      h1
        margin 0
        padding-bottom 10px
        button
          font-size 1em
      h3
        margin 0
        margin-bottom 10px
  section
    padding 10px 15px
    & > h2
      padding 10px
    .grid-wrapper
      .grid
        padding-bottom 10px
        padding-left 10px
        padding-right 10px
        .item
          a
            position relative
            display block
            color #000
          .logo
            display inline-block
            width 100px
            height 100px
            margin 10px
            vertical-align middle
            background-repeat no-repeat
            background-position left center
            background-size cover
          .info
            display inline-block
            width calc(100% - 140px)
            padding 10px
            h2
              margin 0
              vertical-align middle
